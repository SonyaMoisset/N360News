<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview_list_item_source"
    style="@style/SourceListItemCardView">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/list_item_source_name"
            style="@style/SourceListItemTextViewName"/>

        <TextView
            android:id="@+id/list_item_source_category"
            style="@style/SourceListItemTextViewCategory"
            app:layout_constraintTop_toBottomOf="@id/list_item_source_name"/>

        <TextView
            android:id="@+id/list_item_source_description"
            style="@style/SourceListItemTextViewDescription"
            app:layout_constraintTop_toBottomOf="@id/list_item_source_category"/>

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>
